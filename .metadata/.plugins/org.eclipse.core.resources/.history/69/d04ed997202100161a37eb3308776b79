package com.filipe.cursojava.aula43.exercicios;

public class ContaEspecial extends ContaBancaria{
	
	private double limite;

	public ContaEspecial(double valor, String nome, int conta, double saldo) {
		super(nome, conta, saldo);
		this.limite = valor;
	}
	
	public double getLimite() {
		return limite;
	}

	public void setLimite(double limite) {
		this.limite = limite;
	}
	
	public boolean Sacar(double valor){
		if(super.getSaldo - valor >=0){
			super.saldo = super.saldo -valor;
			return true;
		}else{
			System.out.println("Valor não disponível");
			return false;
		}			
	}
	
	

}
